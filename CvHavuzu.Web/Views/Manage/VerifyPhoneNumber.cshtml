@model VerifyPhoneNumberViewModel
@{
    ViewData["Title"] = "Telefon Numarasını Doğrula";
}

<header class="page-header bg-img size-lg">
    <div class="container">
        <h1 class="text-center">Telefon Numarasını Doğrula</h1>
    </div>
</header>
<main>
    <section class="no-padding-top bg-alt">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <form asp-controller="Manage" asp-action="VerifyPhoneNumber" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                        <input asp-for="PhoneNumber" type="hidden" />                        
                        <h5>@ViewData["Status"]</h5>
                         
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Code" class="col-md-3 control-label">Dogrulama Kodu:</label>
                            <div class="col-md-9">
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-success">Dogrula</button>
                            </div>
                        </div>
                    </form>

                    @section Scripts {
                        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
                    }
                </div>
            </div>
        </div>
    </section>
</main>