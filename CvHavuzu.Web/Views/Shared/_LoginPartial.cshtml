@using Microsoft.AspNetCore.Identity
@using CvHavuzu.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="~/assets/img/icon-account.png" alt="avatar" style="width:30px;height:30px;" class="profile-image img-circle"> @UserManager.GetUserName(User)</a>
        <ul class="dropdown-menu dropdown-menu-right">
            <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Profilim</a></li>
            @if (User.IsInRole("Admin"))
            {
            <li>
                <a href="/admin">Yönetim Paneli</a>
            </li>
            }
            <li>
                <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();">Çıkış</a>
            </li>
        </ul>
    </form>
        }
        else
        {
    <a class="dropdown-toggle" href="#" data-toggle="dropdown">
        <img src="~/assets/img/icon-account2.png" alt="avatar">
    </a>

                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="/account/login">Giriş</a></li>
                        <li><a href="/account/register">Kaydol</a></li>
                        <li><a href="/account/forgotpassword">Şifremi Unuttum</a></li>
                    </ul>
}
