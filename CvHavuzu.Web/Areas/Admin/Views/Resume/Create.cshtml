@model CvHavuzu.Web.Models.Resume

@{
    ViewData["Title"] = "Özgecmiş Oluştur";
}

<h2>Özgecmiş Oluştur</h2>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.dataTables.min.css" />
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Gender" class="form-control">
                    <option value="1">Erkek</option>
                    <option value="2">Kadın</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProfessionId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <select asp-for="ProfessionId" class="form-control" asp-items="ViewBag.ProfessionId">
                        <option value=""></option>
                    </select> <span class="input-group-btn"><a class="btn btn-sm btn-default" asp-area="Admin" asp-controller="Profession" asp-action="Index">...</a></span>
                </div>
</div>
        </div>
        <div class="form-group">
            <label asp-for="EducationLevelId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <select asp-for="EducationLevelId" class="form-control" asp-items="ViewBag.EducationLevelId">
                        <option value=""></option>
                    </select> <span class="input-group-btn"><a class="btn btn-sm btn-default" asp-area="Admin" asp-controller="EducationLevels" asp-action="Index">...</a></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UniversityId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <select asp-for="UniversityId" class="form-control" asp-items="ViewBag.UniversityId">
                        <option value=""></option>
                    </select> <span class="input-group-btn"><a class="btn btn-sm btn-default" asp-area="Admin" asp-controller="University" asp-action="Index">...</a></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DepartmentId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId">
                        <option value=""></option>
                    </select> <span class="input-group-btn"><a class="btn btn-sm btn-default" asp-area="Admin" asp-controller="Departments" asp-action="Index">...</a></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ResumeFile" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ResumeFile" class="form-control" />
                <span asp-validation-for="ResumeFile" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ResumeStatusId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <select asp-for="ResumeStatusId" class="form-control" asp-items="ViewBag.ResumeStatusId">
                        <option value=""></option>
                    </select> <span class="input-group-btn"><a class="btn btn-sm btn-default" asp-area="Admin" asp-controller="ResumeStatus" asp-action="Index">...</a></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Skills" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Skills" class="form-control" />
                <span asp-validation-for="Skills" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="ShowInList" />
