@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Telefon Numarası Ekle";
}
<header class="page-header bg-img size-lg">
    <div class="container">
        <h1 class="text-center">Telefon Numarası Ekle</h1>
    </div>
</header>
<main>
    <section class="no-padding-top bg-alt">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <form asp-controller="Manage" asp-action="AddPhoneNumber" method="post" class="form-horizontal">
                        <hr />
                        <div class="container">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="col-md-3 control-label">Telefon Numarası:</label>
                            <div class="col-md-8">
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-offset-3 col-md-10">
                                <button type="submit" class="btn btn-primary">Dogrulama Kodu Yolla</button>
                            </div>
                        </div>

                    </form>

                    @section Scripts {
                        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
                    }
                </div>
            </div>
        </div>
    </section>
</main>