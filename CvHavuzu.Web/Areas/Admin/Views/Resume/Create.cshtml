            </div>
        </div>
        <div class="form-group">
            <label asp-for="TeacherId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId">
                        <option value=""></option>
                    </select> <span class="input-group-btn"><a class="btn btn-sm btn-default" asp-area="Admin" asp-controller="Teacher" asp-action="Index">...</a></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConsultantId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group">
                    <select asp-for="ConsultantId" class="form-control" asp-items="ViewBag.ConsultantId">
                        <option value=""></option>
                    </select> <span class="input-group-btn"><a class="btn btn-sm btn-default" asp-area="Admin" asp-controller="Consultant" asp-action="Index">...</a></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Approved" />
                    <label asp-for="Approved"></label>
                </div>
            </div>
        </div>
                
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Listeye geri dön</a>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.1.1/js/dataTables.responsive.min.js"></script>
    <script>
    $(document).ready(function () {
        $('#tblRecords').DataTable({
            "responsive": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json"
            }
        });
    });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
